<div class="sidebar" class="col-md-4 col-sm-4">
  <div class="sidebar-container flex-shrink-0 p-2">
    <div class="sidebar-top">
      <h5> Hi <%= @current_user.full_name %> </h5>
      <h5> <%= link_to 'Overview', chatrooms_path , class:"nav-link sidebar-link #{'active' if !params[:id].present?}", "aria_current": "page" %>
      </h5>
      <h4> Parents </h4>
      <div id="users">
        <ul class="list-group">
          <% if current_user.admin? %>
            <%= render   "users/user", users: users %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="sidebar-bottom mb-5">
      <h4> Rooms </h4>
      <%= render  "form", chatroom: chatroom %>
      <div id="rooms">
        <ul class="list-group">
          <%= render   "chatrooms", chatrooms: chatrooms %>
        </ul>
      </div>
    </div>
  </div>
</div>
